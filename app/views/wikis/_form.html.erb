<div class="row">
  <div class="col-md-8">
    <%= form_for @wiki do |f| %>
      <div class="form-group">
        <%=f.label :title  %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter title" %> <br>
      </div>

      <div class="form-group">
         <%= f.label :body %>

        <!--  <%= f.text_area :body, class: 'form-control', placeholder: "Enter body" %> -->
         <div id="epiceditor"> <%= f.text_area :body, class: 'form-control', placeholder: "Enter body" %> </div>
      </div>
      
      <div class="form-group">   
        <%= f.submit "Save", class: 'btn btn-success', id: 'wiki-form-submit-btn' %>
      </div>  
     
      <% if current_user.role == "premium_user" || current_user.role == "admin"  %>
      <div class="form-group">
        <%= f.label :private %>
        <%= f.check_box :private %>
      </div>  
      <% end %>  

    <% end %>
  </div>

  <div class="col-md-8">
    <h2><span class="main-text-highlight">Markdown</span></h2><hr>
    <p>This editor uses Markdown, a markup language with plain text formatting syntax designed so that it can be
      converted to HTML. If you're new to Markdown, <a href="http://daringfireball.net/projects/markdown/syntax">
      <strong> click here</strong></a> for an overview of the philosophy and syntax.</p>
  </div>  
</div>  

<script src="epiceditor.min.js">
  var editor = new EpicEditor().load();
  editor.getElement('editor').body.innerHTML = '<%= escape_javascript(@wiki.body) %>';
  $('#wiki-form-submit-btn').click(function(){
    $("#body")[0].value = editor.getElement('editor').body.innerHTML;
  });

</script>  